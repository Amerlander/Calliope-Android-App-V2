<resources>
    <!-- Base application theme. -->
    <style name="Theme.CalliopeMini" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/aqua_200</item>
        <item name="colorPrimaryVariant">@color/aqua_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/aqua_200</item>
        <item name="colorSecondaryVariant">@color/aqua_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="snackbarStyle">@style/MySnackBarStyle</item>
    </style>

    <!-- snackbar style in res/values -->
    <style name="MySnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>