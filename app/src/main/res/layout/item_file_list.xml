<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginVertical="2dp"
    android:background="@drawable/item_list_background"
    android:paddingEnd="8dp"
    android:paddingStart="32dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/hex_file_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="demo"
        android:textSize="16sp"
        android:textStyle="bold"
        app:fontFamily="@font/roboto_mono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hex_file_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01.01.2022 11.25 - 2h. ago"
        android:textSize="14sp"
        app:fontFamily="@font/roboto_mono"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hex_file_name_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>