<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
    android:background="@drawable/item_list_background"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/hex_file_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="demo"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:fontFamily="@font/roboto_mono"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hex_file_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hex_file_date_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="01.01.2022 11.25 - 2h. ago"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        app:fontFamily="@font/roboto_mono"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hex_file_icon"
        app:layout_constraintTop_toBottomOf="@+id/hex_file_name_text_view" />

    <ImageView
        android:id="@+id/hex_file_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_editors_library" />
</androidx.constraintlayout.widget.ConstraintLayout>